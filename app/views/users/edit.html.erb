
      <div class="container"> 
      <div class="row justify-content-center border border-dark rounded mt-5 py-4">
        <% if flash[:errors] %>
        <div class="col-7">
          <div class="bg-danger text-center border border-dark rounded font-weight-light text-light pt-2 mb-2 errors">
            <% flash[:errors].each do |msg| %>
            <p><%= msg %></p>
            <% end %>
          </div>
        </div>
          <% end %>
          <div class="col-6 text-center">
          <h2 class="text-center">Edit Profile:</h2>
            <%= form_for(@current_user) do |f| %>
            <div class="form-group">
                    <%= f.label :first_name%>
                    <%= f.text_field :first_name, {class: "form-control"} %>
            </div>
            <div class="form-group">
                    <%= f.label :last_name%>
                    <%= f.text_field :last_name, {class: "form-control"} %>
            </div>
          <%= f.submit "Edit Profile", class:"btn btn-primary" %>
        <% end %>
          </div>
        </div>
    </div>