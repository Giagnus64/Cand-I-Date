<% if flash[:errors] %>
  <% flash[:errors].each do |msg| %>
  <li><%= msg %></li>
  <% end %>
<% end %>

  <% if !@logged_in %>
    <div class="container border border-dark rounded mt-5 py-4 bg-info">
        <h1 class="mx-auto text-center py-2">Register</h1>
        <div class="row justify-content-center">
          <div class="col-6 text-center">
          <%= form_for(@user) do |f| %>
                <div class="form-group">
                        <%= f.label :first_name%>
                        <%= f.text_field :first_name, {class: "form-control"} %>
                </div>
                <div class="form-group">
                        <%= f.label :last_name%>
                        <%= f.text_field :last_name, {class: "form-control"} %>
                </div>
                <div class="form-group">
                        <%= f.label :email%>
                        <%= f.email_field :email, {class: "form-control"} %>
                </div>
                <div class="form-group">
                        <%= f.label :password%>
                        <%= f.password_field :password, {class: "form-control"} %>
                </div> 
              
              <%= submit_tag "Register", class:"btn btn-secondary text-center" %>
              
            <% end %>
          </div>
        </div>
      
  <% else %>
    <div class="row align-items-center">
      <div class="col-auto align-self-center">
        <h1 class="logged-in-message mx-auto my-auto h-100 text-center">You are already logged in as <%= @current_user.full_name %>!</h1>
      </div>
    </div>
  <% end %>