<div class="container justify-content-center">
    <h1 class="text-center">Politicians You Follow:</h1>
    <div class="row">
        <% if @current_user.politician_matches.count > 0 %>
            <div class="card-columns">
            <% @current_user.politician_matches.each do |politician| %>
            <%# make a link to each politician %>
                <div class="card">
                    <%= image_tag politician.img_url, {class:"card-img-top border-bottom"}%>
                    <div class="card-body text-center">
                        <%= link_to politician.full_name, politician_path(politician), class:"btn btn-profile" %></p>
                    </div>
                </div>
            <% end %>
        <% else %>
            <div class="container text-center">
            <h1 class="mb-5">No Matches Yet!</h1>
            <%= link_to "Get Matching!", politicians_path, class:"btn btn-primary btn-lg" %>
            </div>
        <% end %>
    </div>
</div>

    <div class="row justify-content-around text-center mt-5">
        <div class="col-6">
        <%= link_to "Edit Profile", edit_user_path(@current_user), class: "btn btn-secondary"%>
        </div>
        <div class="col-6">
        <%= button_to "Delete Profile", @current_user, method: :delete, class:"btn btn-danger" %>
        </div>
    </div>
